.container { padding: 16px; background-color: #f5f5f5; }
.leave-item { background-color: #ffffff; padding: 16px; margin-bottom: 12px; border-radius: 8px; box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1); }
.leave-header { display: flex; align-items: center; margin-bottom: 8px; }
.leave-name { font-size: 18px; font-weight: bold; color: #333; }
.leave-class { font-size: 16px; color: #666; margin-left: 8px; }
.leave-content { margin-top: 8px; }
.leave-dates, .leave-reason { margin-bottom: 8px; display: flex; align-items: center; }
.date-label, .reason-label { font-weight: bold; color: #333; width: 80px; }
.date-value, .reason-value { color: #666; }
.approved { color: #07c160; font-weight: bold; }
.not-approved { color: #ff4949; font-weight: bold; }
